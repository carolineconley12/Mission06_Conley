@{
}

<div class="text-center">
    <h1 class="display-4">Add a Movie to Joel's Collection</h1>
    <br />
    <br />
        <form method="post">
            <div>
                <label asp-for="Category">Category:</label>
                <input asp-for="Category" type="text" id="category" name="category" required>
            </div>
            <br />
            <div>
                <label asp-for="Title">Title:</label>
                <input asp-for=Title type="text" id="title" name="title" required>
            </div>
            <br />
            <div>
                <label asp-for="Year">Year:</label>
                <input asp-for="Year" type="number" id="year" name="year" required>
            </div>
            <br />
            <div>
                <label asp-for="Director">Director:</label>
                <input asp-for="Director" type="text" id="director" name="director" required>
            </div>
            <br />
            <div>
                <label asp-for="Rating">Rating:</label>
                <select asp-for="Rating" id="rating" name="rating" required>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <br />
            <div>
                <label asp-for="Edited">Edited:</label>
                <select asp-for="Edited" id="edited" name="edited" required>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <br />
            <div>
                <label asp-for="LentTo">Lent To:</label>
                <input asp-for="LentTo">
            </div>
            <br />
            <div>
                <label asp-for="Notes">Notes:</label>
                <input asp-for="Notes">
            </div>
            <br />
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>



</div>
